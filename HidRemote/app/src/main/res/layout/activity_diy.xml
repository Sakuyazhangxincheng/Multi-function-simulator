<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/include_keyboard1" />
        <include layout="@layout/include_keyboard2" />
        <include layout="@layout/include_keyboard3" />
        <include layout="@layout/include_keyboard4" />
        <include layout="@layout/include_keyboard5" />
        <include layout="@layout/include_keyboard6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/hengButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横屏" />

    </LinearLayout>

</FrameLayout>