<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_padding"
        android:background="@color/bg_window"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_item"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llt_tv_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/item_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/item_padding"
                    android:paddingRight="@dimen/item_padding"
                    android:text="设备模式"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/s_text_size" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:drawableRight="@mipmap/gray_in"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/item_padding"
                    android:paddingRight="@dimen/item_padding"
                    android:text="键鼠"
                    android:textColor="@color/subtitle"
                    android:textSize="@dimen/t_text_size" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_tv_vibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/item_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/item_padding"
                    android:paddingRight="@dimen/item_padding"
                    android:text="按键振动强度"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/s_text_size" />

                <TextView
                    android:id="@+id/tv_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:drawableRight="@mipmap/gray_in"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/item_padding"
                    android:paddingRight="@dimen/item_padding"
                    android:text="弱"
                    android:textColor="@color/subtitle"
                    android:textSize="@dimen/t_text_size" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@drawable/item_sel_c0"
            android:orientation="vertical">

<!--            <LinearLayout
                android:id="@+id/tv_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/item_padding"
                android:background="@color/dividing_line" />

            <LinearLayout
                android:id="@+id/tv_problem_feekback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/item_height"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/item_padding"
                    android:paddingRight="@dimen/item_padding"
                    android:text="@string/feekback"
                    android:textColor="@color/main_text"
                    android:textSize="@dimen/s_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:drawableRight="@mipmap/gray_in"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/item_padding"
                    android:paddingRight="@dimen/item_padding"
                    android:text="20271055@bjtu.edu.cn"
                    android:textColor="@color/subtitle"
                    android:textSize="@dimen/t_text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@drawable/item_sel_c0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@mipmap/gray_in"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_padding"
                android:paddingRight="@dimen/item_padding"
                android:text="@string/our_team"
                android:textColor="@color/main_text"
                android:textSize="@dimen/s_text_size" />

            <TextView
                android:id="@+id/tv_about_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="?android:attr/selectableItemBackground"
                android:drawableRight="@mipmap/gray_in"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/item_padding"
                android:paddingRight="@dimen/item_padding"
                android:text="@string/support_us"
                android:textColor="@color/main_text"
                android:textSize="@dimen/s_text_size" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
