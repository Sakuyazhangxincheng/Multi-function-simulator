<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp"
        android:background="@color/navigation_background"
        app:contentInsetEnd="0dp"
        app:titleMargin="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/icon_back_black" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="欢迎注册"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_input_bian"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:hint="请输入账号"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:id="@+id/et_name"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input_bian"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_pwd"
            android:hint="请输入密码"
            android:textSize="18sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:paddingLeft="30dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input_bian"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_pwd1"
            android:hint="请输入确认密码"
            android:textSize="18sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:paddingLeft="30dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next_step"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/zhuce"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

<!--    <TextView
        android:id="@+id/denglu"
        android:text="有账号？去登陆"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/denglu"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>-->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <CheckBox
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="已阅读并同意"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="《用户协议》"
            android:textColor="@color/navigation_background"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>