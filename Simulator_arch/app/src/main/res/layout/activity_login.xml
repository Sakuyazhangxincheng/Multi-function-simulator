<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp"
        android:background="@color/navigation_background"
        app:contentInsetEnd="0dp"
        app:titleMargin="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/icon_back_black" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="欢迎登录"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:textStyle="bold" />
    <LinearLayout
        android:background="@drawable/login_input_bian"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:background="@mipmap/icon_login_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="14dp"
            android:layout_height="19dp"/>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_E1E1E1"
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"/>
        <EditText
            android:id="@+id/et_phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textColorHint="@color/color_E1E1E1"
            android:layout_marginLeft="10dp"
            android:hint="输入账号"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_input_bian"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_login_pwd"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="14dp"
            android:layout_height="19dp"/>
        <View
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"/>
        <EditText
            android:id="@+id/et_pwd"
            android:textSize="15sp"
            android:maxLength="11"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:hint="输入密码"
            android:textColorHint="@color/color_E1E1E1"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:layout_marginTop="5dp"
            android:textSize="18sp" />
    </RelativeLayout>



    <TextView
        android:id="@+id/tv_login"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/zhuce"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/tv_register"
        android:text="还没有账号？去注册"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/denglu"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <CheckBox
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="已阅读并同意"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="《隐私政策》《用户协议》"
            android:textColor="@color/navigation_background"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>